# Platform API Environment Variables
# Copy to .env for local development

NODE_ENV=development
PORT=3001

# Redis (for job queues)
REDIS_URL=redis://localhost:6379
# Or use individual settings:
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Stripe
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_STARTER=price_starter_test
STRIPE_PRICE_PREMIUM=price_premium_test

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=invites@yourdomain.com
SENDGRID_FROM_NAME=Everbloom Weddings
SENDGRID_WEBHOOK_VERIFICATION_KEY=your-webhook-key

# Service URLs
PLATFORM_URL=http://localhost:3000
WEDDING_SITE_URL=http://localhost:4321

# Custom Domains
NETLIFY_SITE_DOMAIN=wedding-bestie.netlify.app
CUSTOM_DOMAIN_CNAME_TARGET=wedding-bestie.netlify.app
DOMAIN_VERIFICATION_SECRET=dev-secret-change-in-prod

# Security
WORKER_TOKEN=dev-worker-token
PHOTO_UPLOAD_SECRET=dev-photo-secret
PHOTO_UPLOAD_DIR=./uploads
