---
import type { RenderConfig } from '../types';

interface Props {
  config: RenderConfig;
}

const { config } = Astro.props;

// Check if passcode protection is enabled
const isProtected = config.features.PASSCODE_SITE && config.passcodeProtected;
const theme = config.theme;
const partnerNames = config.wedding.partnerNames;
const slug = config.wedding.slug;
---

{isProtected ? (
  <div id="passcode-gate-wrapper" data-slug={slug}>
    <!-- Passcode Form (shown initially) -->
    <div
      id="passcode-form-container"
      style={`
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: ${theme.neutralLight};
        padding: 2rem;
      `}
    >
      <div style="max-width: 400px; width: 100%; text-align: center;">
        <!-- Lock icon -->
        <div
          style={`
            width: 4rem;
            height: 4rem;
            margin: 0 auto 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background-color: ${theme.primary}20;
          `}
        >
          <svg
            width="32"
            height="32"
            fill="none"
            viewBox="0 0 24 24"
            stroke={theme.primary}
            stroke-width="1.5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"
            />
          </svg>
        </div>

        <h1
          style={`
            font-family: 'Cormorant Garamond', 'Georgia', serif;
            font-size: 1.75rem;
            font-weight: 400;
            color: ${theme.neutralDark};
            margin: 0 0 0.5rem 0;
          `}
        >
          {partnerNames[0]} & {partnerNames[1]}
        </h1>

        <p
          style={`
            font-family: 'Inter', 'Helvetica Neue', sans-serif;
            font-size: 1rem;
            color: ${theme.neutralDark};
            opacity: 0.7;
            margin: 0 0 2rem 0;
          `}
        >
          This wedding site is private
        </p>

        <form id="passcode-form" aria-label="Site access form">
          <div style="margin-bottom: 1rem;">
            <label for="passcode-input" class="visually-hidden">Site passcode</label>
            <input
              type="password"
              id="passcode-input"
              placeholder="Enter passcode"
              autofocus
              aria-describedby="passcode-hint"
              autocomplete="off"
              style={`
                width: 100%;
                padding: 1rem 1.25rem;
                font-size: 1rem;
                font-family: 'Inter', 'Helvetica Neue', sans-serif;
                border: 1px solid ${theme.neutralDark}30;
                border-radius: 0.5rem;
                background-color: ${theme.neutralLight};
                color: ${theme.neutralDark};
                outline: none;
                box-sizing: border-box;
                text-align: center;
                letter-spacing: 0.1em;
              `}
            />
          </div>

          <p
            id="passcode-error"
            role="alert"
            aria-live="assertive"
            style={`
              font-family: 'Inter', 'Helvetica Neue', sans-serif;
              font-size: 0.875rem;
              color: #dc2626;
              margin: 0 0 1rem 0;
              display: none;
            `}
          >
          </p>

          <button
            type="submit"
            id="passcode-submit"
            style={`
              width: 100%;
              padding: 1rem 2rem;
              font-size: 1rem;
              font-family: 'Inter', 'Helvetica Neue', sans-serif;
              font-weight: 500;
              color: ${theme.neutralLight};
              background-color: ${theme.primary};
              border: none;
              border-radius: 0.5rem;
              cursor: pointer;
              transition: opacity 0.2s ease;
            `}
          >
            Enter
          </button>
        </form>

        <p
          id="passcode-hint"
          style={`
            font-family: 'Inter', 'Helvetica Neue', sans-serif;
            font-size: 0.75rem;
            color: ${theme.neutralDark};
            opacity: 0.5;
            margin: 2rem 0 0 0;
          `}
        >
          Please enter the passcode you received from the couple
        </p>

        <style>
          .visually-hidden {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
          }

          #passcode-input:focus {
            outline: 2px solid var(--primary, ${theme.primary});
            outline-offset: 2px;
          }

          #passcode-submit:focus-visible {
            outline: 2px solid ${theme.neutralDark};
            outline-offset: 2px;
          }
        </style>
      </div>
    </div>

    <!-- Protected Content (hidden initially) -->
    <div id="protected-content" style="display: none;">
      <slot />
    </div>
  </div>

  <script is:inline define:vars={{ apiBaseUrl: import.meta.env.PUBLIC_PLATFORM_API_URL || 'http://localhost:3001/api' }}>
    document.addEventListener('DOMContentLoaded', () => {
      const wrapper = document.getElementById('passcode-gate-wrapper');
      const formContainer = document.getElementById('passcode-form-container');
      const protectedContent = document.getElementById('protected-content');
      const form = document.getElementById('passcode-form');
      const input = document.getElementById('passcode-input');
      const errorEl = document.getElementById('passcode-error');
      const submitBtn = document.getElementById('passcode-submit');

      if (!wrapper || !formContainer || !protectedContent || !form || !input) {
        return;
      }

      const slug = wrapper.dataset.slug;
      const storageKey = `everbloom_passcode_${slug}`;

      const showContent = () => {
        formContainer.style.display = 'none';
        protectedContent.style.display = 'block';
      };

      const showError = (message) => {
        errorEl.textContent = message;
        errorEl.style.display = 'block';
        input.style.borderColor = '#b91c1c';
        input.setAttribute('aria-invalid', 'true');
      };

      const clearError = () => {
        errorEl.style.display = 'none';
        input.style.borderColor = '';
        input.removeAttribute('aria-invalid');
      };

      // Check for existing session
      try {
        const storedToken = localStorage.getItem(storageKey);
        if (storedToken) {
          showContent();
          return;
        }
      } catch (e) {
        // localStorage not available
      }

      input.addEventListener('input', clearError);

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const passcode = input.value.trim();
        if (!passcode) {
          showError('Please enter the passcode');
          return;
        }

        submitBtn.disabled = true;
        submitBtn.textContent = 'Verifying...';
        submitBtn.style.opacity = '0.7';
        clearError();

        try {
          const response = await fetch(`${apiBaseUrl}/site-config/${slug}/verify-passcode`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ passcode }),
          });

          const data = await response.json();

          if (data.ok && data.data.valid) {
            // Store session token
            if (data.data.sessionToken) {
              try {
                localStorage.setItem(storageKey, data.data.sessionToken);
              } catch (e) {
                // localStorage not available
              }
            }
            showContent();
          } else {
            showError('Incorrect passcode. Please try again.');
            input.value = '';
            input.focus();
          }
        } catch (err) {
          showError('Unable to verify passcode. Please try again.');
        } finally {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Enter';
          submitBtn.style.opacity = '1';
        }
      });
    });
  </script>
) : (
  <slot />
)}
