---
import type { RenderConfig } from '../types';

interface Props {
  config: RenderConfig;
}

const { config } = Astro.props;
const { wedding, theme } = config;
const title = `${wedding.partnerNames[0]} & ${wedding.partnerNames[1]}`;
const description = `Join us to celebrate the wedding of ${wedding.partnerNames[0]} & ${wedding.partnerNames[1]}`;

// Build the canonical URL for this wedding site
const siteUrl = import.meta.env.PUBLIC_WEDDING_SITE_URL || import.meta.env.SITE || 'https://everbloom.wedding';
const canonicalUrl = `${siteUrl}/w/${wedding.slug}`;

// OG image: Use custom uploaded image if available, otherwise use default
// PRD: "Admin can customize share image"
const defaultOgImageUrl = `${siteUrl}/og-image-default.svg`;
const ogImageUrl = config.ogImageUrl || defaultOgImageUrl;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Open Graph meta tags for social sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="Everbloom" />

    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <style define:vars={{
      primary: theme.primary,
      accent: theme.accent,
      neutralLight: theme.neutralLight,
      neutralDark: theme.neutralDark,
    }}>
      :root {
        --primary: var(--primary);
        --accent: var(--accent);
        --neutral-light: var(--neutralLight);
        --neutral-dark: var(--neutralDark);
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', 'Helvetica Neue', sans-serif;
        background-color: var(--neutral-light);
        color: var(--neutral-dark);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      main {
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
