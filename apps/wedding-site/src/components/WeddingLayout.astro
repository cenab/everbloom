---
import type { RenderConfig } from '@wedding-bestie/shared';

interface Props {
  config: RenderConfig;
}

const { config } = Astro.props;
const { wedding, theme } = config;
const title = `${wedding.partnerNames[0]} & ${wedding.partnerNames[1]}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={`Wedding celebration of ${title}`} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <style define:vars={{
      primary: theme.primary,
      accent: theme.accent,
      neutralLight: theme.neutralLight,
      neutralDark: theme.neutralDark,
    }}>
      :root {
        --primary: var(--primary);
        --accent: var(--accent);
        --neutral-light: var(--neutralLight);
        --neutral-dark: var(--neutralDark);
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', 'Helvetica Neue', sans-serif;
        background-color: var(--neutral-light);
        color: var(--neutral-dark);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      main {
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
