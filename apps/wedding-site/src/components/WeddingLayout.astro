---
import type { RenderConfig } from '../types';

interface Props {
  config: RenderConfig;
}

const { config } = Astro.props;
const { wedding, theme } = config;
const title = `${wedding.partnerNames[0]} & ${wedding.partnerNames[1]}`;
const description = `Join us to celebrate the wedding of ${wedding.partnerNames[0]} & ${wedding.partnerNames[1]}`;

// Build the canonical URL for this wedding site
const siteUrl = import.meta.env.PUBLIC_WEDDING_SITE_URL || import.meta.env.SITE || 'https://everbloom.wedding';
const canonicalUrl = `${siteUrl}/w/${wedding.slug}`;

// OG image: Use custom uploaded image if available, otherwise use default PNG
// PRD: "Admin can customize share image"
// Note: Default is PNG (not SVG) because Facebook/iMessage don't support SVG for OG images
const defaultOgImageUrl = `${siteUrl}/og-image-default.png`;
const ogImageUrl = config.ogImageUrl || defaultOgImageUrl;

// Determine image type for meta tag (PNG for default, infer from URL for custom)
const ogImageType = config.ogImageUrl
  ? (config.ogImageUrl.includes('.jpg') || config.ogImageUrl.includes('.jpeg') ? 'image/jpeg'
     : config.ogImageUrl.includes('.png') ? 'image/png'
     : config.ogImageUrl.includes('.webp') ? 'image/webp'
     : 'image/png')
  : 'image/png';

// OG image dimensions - standard social media preview size
const ogImageWidth = '1200';
const ogImageHeight = '630';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content={theme.primary} />
    <title>{title}</title>

    <!-- Open Graph meta tags for social sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content={ogImageWidth} />
    <meta property="og:image:height" content={ogImageHeight} />
    <meta property="og:image:type" content={ogImageType} />
    <meta property="og:image:alt" content={`Wedding invitation for ${wedding.partnerNames[0]} & ${wedding.partnerNames[1]}`} />
    <meta property="og:site_name" content="Everbloom" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={`Wedding invitation for ${wedding.partnerNames[0]} & ${wedding.partnerNames[1]}`} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <style define:vars={{
      primary: theme.primary,
      accent: theme.accent,
      neutralLight: theme.neutralLight,
      neutralDark: theme.neutralDark,
    }}>
      :root {
        --primary: var(--primary);
        --accent: var(--accent);
        --neutral-light: var(--neutralLight);
        --neutral-dark: var(--neutralDark);
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      /* Respect reduced motion preferences for accessibility */
      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }

        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }

      body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', 'Helvetica Neue', sans-serif;
        background-color: var(--neutral-light);
        color: var(--neutral-dark);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      main {
        min-height: 100vh;
      }

      /* Skip link for keyboard accessibility */
      .skip-link {
        position: absolute;
        top: -40px;
        left: 0;
        background: var(--primary);
        color: var(--neutral-light);
        padding: 0.75rem 1rem;
        z-index: 9999;
        text-decoration: none;
        font-weight: 500;
        border-radius: 0 0 4px 0;
        transition: top 0.2s ease;
      }

      .skip-link:focus {
        top: 0;
        outline: 2px solid var(--neutral-dark);
        outline-offset: 2px;
      }

      /* Global focus indicator for accessibility */
      *:focus-visible {
        outline: 2px solid var(--primary);
        outline-offset: 2px;
      }

      /* Remove outline for mouse users but keep for keyboard */
      *:focus:not(:focus-visible) {
        outline: none;
      }
    </style>
  </head>
  <body>
    <!-- Skip to main content link for keyboard navigation -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <main id="main-content" tabindex="-1">
      <slot />
    </main>
  </body>
</html>
