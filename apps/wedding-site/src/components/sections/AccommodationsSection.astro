---
import type { Section, Theme, AccommodationsConfig } from '../../types';

interface Props {
  section: Section;
  theme: Theme;
  accommodations?: AccommodationsConfig;
}

const { section, theme, accommodations } = Astro.props;
const { title, description } = section.data as { title?: string; description?: string };

// Sort hotels by order
const hotels = accommodations?.hotels?.slice().sort((a, b) => a.order - b.order) || [];
const travelInfo = accommodations?.travelInfo;

// Check if we have any travel info to display
const hasTravelInfo = travelInfo && (
  travelInfo.airportDirections ||
  travelInfo.parkingInfo ||
  travelInfo.mapUrl
);
---

<section
  class="accommodations-section"
  style={`--primary: ${theme.primary}; --accent: ${theme.accent}; --neutral-light: ${theme.neutralLight}; --neutral-dark: ${theme.neutralDark};`}
>
  <div class="accommodations-content">
    <h2 class="section-title">{title || 'Where to Stay'}</h2>
    {description && <p class="section-description">{description}</p>}

    {/* Hotels Section */}
    {hotels.length > 0 && (
      <div class="hotels-section">
        <h3 class="subsection-title">Accommodations</h3>
        <div class="hotels-list">
          {hotels.map((hotel) => (
            <div class="hotel-card">
              <h4 class="hotel-name">{hotel.name}</h4>
              <p class="hotel-address">{hotel.address}</p>

              {hotel.roomBlockCode && (
                <div class="room-block">
                  <span class="room-block-label">Room block code:</span>
                  <span class="room-block-code">{hotel.roomBlockCode}</span>
                </div>
              )}

              {hotel.notes && (
                <p class="hotel-notes">{hotel.notes}</p>
              )}

              {hotel.bookingUrl && (
                <a
                  href={hotel.bookingUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="booking-link"
                >
                  Book Now
                  <svg
                    class="external-icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                    <polyline points="15 3 21 3 21 9" />
                    <line x1="10" y1="14" x2="21" y2="3" />
                  </svg>
                </a>
              )}
            </div>
          ))}
        </div>
      </div>
    )}

    {/* Travel Info Section */}
    {hasTravelInfo && (
      <div class="travel-section">
        <h3 class="subsection-title">Getting There</h3>

        {travelInfo.airportDirections && (
          <div class="travel-item">
            <div class="travel-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"/>
              </svg>
            </div>
            <div class="travel-content">
              <h4 class="travel-label">From the Airport</h4>
              <p class="travel-text">{travelInfo.airportDirections}</p>
            </div>
          </div>
        )}

        {travelInfo.parkingInfo && (
          <div class="travel-item">
            <div class="travel-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2"/>
                <path d="M9 17V7h4a3 3 0 0 1 0 6H9"/>
              </svg>
            </div>
            <div class="travel-content">
              <h4 class="travel-label">Parking</h4>
              <p class="travel-text">{travelInfo.parkingInfo}</p>
            </div>
          </div>
        )}

        {travelInfo.mapUrl && (
          <a
            href={travelInfo.mapUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="map-link"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="3 6 9 3 15 6 21 3 21 18 15 21 9 18 3 21"/>
              <line x1="9" y1="3" x2="9" y2="18"/>
              <line x1="15" y1="6" x2="15" y2="21"/>
            </svg>
            View Map
          </a>
        )}
      </div>
    )}

    {/* Empty state */}
    {hotels.length === 0 && !hasTravelInfo && (
      <p class="no-accommodations">Accommodation details will appear here.</p>
    )}
  </div>
</section>

<style>
  .accommodations-section {
    background-color: var(--neutral-light);
    padding: 6rem 2rem;
  }

  .accommodations-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .section-title {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 400;
    color: var(--neutral-dark);
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
    text-align: center;
  }

  .section-description {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1.125rem;
    color: var(--neutral-dark);
    opacity: 0.8;
    line-height: 1.6;
    margin: 0 0 3rem 0;
    text-align: center;
  }

  .subsection-title {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--primary);
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
  }

  /* Hotels */
  .hotels-section {
    margin-bottom: 3rem;
  }

  .hotels-list {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .hotels-list {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
  }

  .hotel-card {
    background-color: color-mix(in srgb, var(--neutral-light) 50%, white 50%);
    border: 1px solid color-mix(in srgb, var(--neutral-dark) 10%, transparent 90%);
    border-radius: 12px;
    padding: 1.5rem;
    transition: box-shadow 0.2s ease;
  }

  .hotel-card:hover {
    box-shadow: 0 4px 12px color-mix(in srgb, var(--neutral-dark) 8%, transparent 92%);
  }

  .hotel-name {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--neutral-dark);
    margin: 0 0 0.5rem 0;
  }

  .hotel-address {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.9375rem;
    color: var(--neutral-dark);
    opacity: 0.7;
    margin: 0 0 1rem 0;
    line-height: 1.5;
  }

  .room-block {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 0.75rem;
    padding: 0.75rem;
    background-color: color-mix(in srgb, var(--accent) 15%, transparent 85%);
    border-radius: 8px;
  }

  .room-block-label {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.8125rem;
    color: var(--neutral-dark);
    opacity: 0.7;
  }

  .room-block-code {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--accent);
    letter-spacing: 0.05em;
  }

  .hotel-notes {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.875rem;
    color: var(--neutral-dark);
    opacity: 0.7;
    margin: 0 0 1rem 0;
    line-height: 1.5;
    font-style: italic;
  }

  .booking-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background-color: var(--primary);
    color: var(--neutral-light);
    text-decoration: none;
    border-radius: 6px;
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .booking-link:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .external-icon {
    flex-shrink: 0;
    opacity: 0.8;
  }

  /* Travel Info */
  .travel-section {
    border-top: 1px solid color-mix(in srgb, var(--neutral-dark) 10%, transparent 90%);
    padding-top: 2rem;
  }

  .travel-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .travel-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: color-mix(in srgb, var(--primary) 10%, transparent 90%);
    border-radius: 8px;
    color: var(--primary);
  }

  .travel-content {
    flex: 1;
  }

  .travel-label {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--neutral-dark);
    margin: 0 0 0.25rem 0;
  }

  .travel-text {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.9375rem;
    color: var(--neutral-dark);
    opacity: 0.8;
    margin: 0;
    line-height: 1.6;
    white-space: pre-wrap;
  }

  .map-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background-color: transparent;
    color: var(--primary);
    text-decoration: none;
    border: 1px solid var(--primary);
    border-radius: 6px;
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: background-color 0.2s ease, color 0.2s ease;
    margin-top: 0.5rem;
  }

  .map-link:hover {
    background-color: var(--primary);
    color: var(--neutral-light);
  }

  .no-accommodations {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1rem;
    color: var(--neutral-dark);
    opacity: 0.6;
    text-align: center;
  }

  @media (max-width: 640px) {
    .accommodations-section {
      padding: 4rem 1.5rem;
    }

    .hotel-card {
      padding: 1.25rem;
    }

    .travel-item {
      flex-direction: column;
      gap: 0.75rem;
    }

    .travel-icon {
      width: 36px;
      height: 36px;
    }
  }
</style>
