---
import type { Section, Theme } from '@wedding-bestie/shared';

interface Props {
  section: Section;
  theme: Theme;
  slug: string;
}

const { section, theme, slug } = Astro.props;
const { title, description, ctaLabel } = section.data as {
  title?: string;
  description?: string;
  ctaLabel?: string;
};
---

<section
  class="photo-upload-section"
  style={`--primary: ${theme.primary}; --accent: ${theme.accent}; --neutral-light: ${theme.neutralLight}; --neutral-dark: ${theme.neutralDark};`}
>
  <div class="photo-upload-content">
    <span class="photo-eyebrow">Photo Album</span>
    <h2 class="section-title">{title || 'Share Photos'}</h2>
    {description && <p class="section-description">{description}</p>}

    <a href={`/w/${slug}/photos`} class="photo-upload-button">
      {ctaLabel || 'Add your photos'}
    </a>
  </div>
</section>

<style>
  .photo-upload-section {
    background-color: var(--neutral-light);
    padding: 5.5rem 2rem;
  }

  .photo-upload-content {
    max-width: 620px;
    margin: 0 auto;
    text-align: center;
    padding: 3rem 2.5rem;
    border-radius: 12px;
    box-shadow: 0 24px 45px rgba(45, 45, 45, 0.08);
    background-color: var(--neutral-light);
  }

  .photo-eyebrow {
    display: inline-block;
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 400;
    color: var(--neutral-dark);
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
  }

  .section-description {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1.05rem;
    color: var(--neutral-dark);
    opacity: 0.75;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .photo-upload-button {
    display: inline-block;
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--neutral-light);
    background-color: var(--primary);
    padding: 0.95rem 2.5rem;
    border-radius: 999px;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .photo-upload-button:hover {
    opacity: 0.9;
  }
</style>
