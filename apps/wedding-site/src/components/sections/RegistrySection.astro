---
import type { Section, Theme, RegistryConfig } from '../../types';

interface Props {
  section: Section;
  theme: Theme;
  registry?: RegistryConfig;
}

const { section, theme, registry } = Astro.props;
const { title, description } = section.data as { title?: string; description?: string };

// Sort registry links by order
const registryLinks = registry?.links?.slice().sort((a, b) => a.order - b.order) || [];
---

<section
  class="registry-section"
  style={`--primary: ${theme.primary}; --accent: ${theme.accent}; --neutral-light: ${theme.neutralLight}; --neutral-dark: ${theme.neutralDark};`}
>
  <div class="registry-content">
    <h2 class="section-title">{title || 'Gift Registry'}</h2>
    {description && <p class="section-description">{description}</p>}

    {registryLinks.length === 0 ? (
      <p class="no-registries">Registry links will appear here.</p>
    ) : (
      <div class="registry-list">
        {registryLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="registry-link"
          >
            <span class="registry-name">{link.name}</span>
            <svg
              class="external-icon"
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
              <line x1="10" y1="14" x2="21" y2="3" />
            </svg>
          </a>
        ))}
      </div>
    )}
  </div>
</section>

<style>
  .registry-section {
    background-color: var(--neutral-light);
    padding: 6rem 2rem;
  }

  .registry-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .section-title {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 400;
    color: var(--neutral-dark);
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
  }

  .section-description {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1.125rem;
    color: var(--neutral-dark);
    opacity: 0.8;
    line-height: 1.6;
    margin: 0 0 3rem 0;
  }

  .no-registries {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1rem;
    color: var(--neutral-dark);
    opacity: 0.6;
  }

  .registry-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .registry-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.25rem 2rem;
    background-color: var(--primary);
    color: var(--neutral-light);
    text-decoration: none;
    border-radius: 8px;
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1.125rem;
    font-weight: 500;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .registry-link:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .registry-link:active {
    transform: translateY(0);
  }

  .registry-name {
    letter-spacing: 0.01em;
  }

  .external-icon {
    flex-shrink: 0;
    opacity: 0.8;
  }

  @media (max-width: 640px) {
    .registry-section {
      padding: 4rem 1.5rem;
    }

    .registry-link {
      padding: 1rem 1.5rem;
      font-size: 1rem;
    }
  }
</style>
