---
/**
 * MusicRequestSection component.
 * Displays a CTA for guests to suggest songs for the wedding playlist.
 * PRD: Links to music request form when MUSIC_REQUESTS feature is enabled.
 */
import type { Section, Theme } from '../../types';

interface Props {
  section: Section;
  theme: Theme;
  slug: string;
}

const { section, theme, slug } = Astro.props;
const data = section.data as { title?: string; description?: string };
const title = data.title || 'Suggest a Song';
const description = data.description || 'Help us create the perfect playlist for our celebration';
---

<section class="music-request-section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    <p class="section-description">{description}</p>
    <a href={`/w/${slug}/music`} class="request-button">
      Share a song request
    </a>
  </div>
</section>

<style define:vars={{ primary: theme.primary, accent: theme.accent, neutralLight: theme.neutralLight, neutralDark: theme.neutralDark }}>
  .music-request-section {
    padding: 4rem 1.5rem;
    background: linear-gradient(135deg, var(--neutralLight) 0%, #fff 100%);
    text-align: center;
  }

  .container {
    max-width: 600px;
    margin: 0 auto;
  }

  .section-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2rem;
    font-weight: 500;
    color: var(--neutralDark);
    margin: 0 0 1rem 0;
  }

  .section-description {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    color: var(--neutralDark);
    opacity: 0.8;
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .request-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background-color: var(--primary);
    color: var(--neutralLight);
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 8px;
    transition: background-color 0.2s ease, transform 0.2s ease;
  }

  .request-button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  @media (max-width: 640px) {
    .music-request-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .request-button {
      width: 100%;
      padding: 1rem;
    }
  }
</style>
