---
import type { Section, Theme } from '../../types';
import { getTranslations } from '../../lib/i18n';

interface Props {
  section: Section;
  theme: Theme;
  slug: string;
  language?: string;
}

const { section, theme, slug, language } = Astro.props;
const { title, description } = section.data as { title?: string; description?: string };
const t = getTranslations(language);
---

<section
  class="rsvp-section"
  style={`--primary: ${theme.primary}; --accent: ${theme.accent}; --neutral-light: ${theme.neutralLight}; --neutral-dark: ${theme.neutralDark};`}
>
  <div class="rsvp-content">
    <h2 class="section-title">{title || t.rsvpTitle}</h2>
    {description && <p class="section-description">{description}</p>}

    <a href={`/w/${slug}/rsvp`} class="rsvp-button">
      {t.rsvpRespondButton}
    </a>
  </div>
</section>

<style>
  .rsvp-section {
    background-color: var(--accent);
    padding: 6rem 2rem;
  }

  .rsvp-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .section-title {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 400;
    color: var(--neutral-light);
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
  }

  .section-description {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1.125rem;
    color: var(--neutral-light);
    opacity: 0.9;
    line-height: 1.6;
    margin: 0 0 2.5rem 0;
  }

  .rsvp-button {
    display: inline-block;
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--neutral-dark);
    background-color: var(--neutral-light);
    padding: 1rem 2.5rem;
    border-radius: 4px;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .rsvp-button:hover {
    opacity: 0.9;
  }
</style>
