---
import type { Section, Theme } from '@wedding-bestie/shared';

interface Props {
  section: Section;
  theme: Theme;
  weddingDate?: string;
  venue?: string;
  city?: string;
}

const { section, theme, weddingDate, venue, city } = Astro.props;
const { title, description } = section.data as { title?: string; description?: string };
---

<section
  class="event-details-section"
  style={`--primary: ${theme.primary}; --accent: ${theme.accent}; --neutral-light: ${theme.neutralLight}; --neutral-dark: ${theme.neutralDark};`}
>
  <div class="event-details-content">
    <h2 class="section-title">{title || 'The Details'}</h2>
    {description && <p class="section-description">{description}</p>}

    <div class="details-grid">
      {weddingDate && (
        <div class="detail-item">
          <span class="detail-label">When</span>
          <span class="detail-value">{weddingDate}</span>
        </div>
      )}
      {venue && (
        <div class="detail-item">
          <span class="detail-label">Where</span>
          <span class="detail-value">{venue}</span>
        </div>
      )}
      {city && (
        <div class="detail-item">
          <span class="detail-label">Location</span>
          <span class="detail-value">{city}</span>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .event-details-section {
    background-color: var(--neutral-light);
    padding: 6rem 2rem;
  }

  .event-details-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .section-title {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 400;
    color: var(--neutral-dark);
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
  }

  .section-description {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 1.125rem;
    color: var(--neutral-dark);
    opacity: 0.8;
    line-height: 1.6;
    margin: 0 0 3rem 0;
  }

  .details-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .detail-label {
    font-family: 'Inter', 'Helvetica Neue', sans-serif;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--primary);
  }

  .detail-value {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 1.5rem;
    color: var(--neutral-dark);
  }

  @media (min-width: 640px) {
    .details-grid {
      flex-direction: row;
      justify-content: center;
      gap: 4rem;
    }
  }
</style>
