---
import type { Section, Theme } from '../../types';

interface Props {
  section: Section;
  theme: Theme;
}

const { section, theme } = Astro.props;
const { headline, subheadline } = section.data as { headline?: string; subheadline?: string };
---

<section
  class="hero-section"
  style={`--primary: ${theme.primary}; --accent: ${theme.accent}; --neutral-light: ${theme.neutralLight}; --neutral-dark: ${theme.neutralDark};`}
>
  <div class="hero-content">
    <h1 class="hero-headline">{headline || 'Our Wedding'}</h1>
    {subheadline && (
      <p class="hero-subheadline">{subheadline}</p>
    )}
  </div>
</section>

<style>
  .hero-section {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--neutral-light);
    padding: 4rem 2rem;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
  }

  .hero-headline {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 400;
    color: var(--neutral-dark);
    letter-spacing: 0.02em;
    line-height: 1.2;
    margin: 0;
  }

  .hero-subheadline {
    font-family: 'Inter', 'system-ui', sans-serif;
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    font-weight: 400;
    color: var(--neutral-dark);
    opacity: 0.8;
    letter-spacing: 0.04em;
    margin: 1.5rem 0 0 0;
  }
</style>
